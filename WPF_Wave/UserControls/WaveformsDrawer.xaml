<UserControl
    x:Class="WPF_Wave.UserControls.WaveformsDrawer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPF_Wave.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="500"
    HorizontalAlignment="Left"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <!--  波形表示用のImage  -->
        <Image x:Name="WaveFromImage" />

        <!--  多ビット信号の値を表示するTextBlockを持つCanvas  -->
        <Canvas x:Name="SignalValueDrawer" />
    </Grid>
</UserControl>
