<UserControl
    x:Class="WPF_Wave.UserControls.LicenseViewer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helper="clr-namespace:WPF_Wave.Helpers"
    xmlns:local="clr-namespace:WPF_Wave.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Loaded="UserControl_Loaded"
    mc:Ignorable="d">

    <UserControl.Resources>
        <helper:BooleanToVisibilityConverter x:Key="BoolToVisibility" />
    </UserControl.Resources>

    <ItemsControl x:Name="LicensesControl">
        <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <VirtualizingStackPanel Orientation="Vertical" />
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>

        <ItemsControl.ItemTemplate>
            <DataTemplate>
                <DataTemplate.Resources>
                    <Style TargetType="Border">
                        <Setter Property="Padding" Value="10" />
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource CardBackgroundFillColorDefaultBrush}" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="False">
                                <Setter Property="Background" Value="{DynamicResource CardBackgroundFillColorSecondaryBrush}" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataTemplate.Resources>

                <Border
                    Grid.Row="2"
                    Height="Auto"
                    Margin="5"
                    CornerRadius="5">

                    <StackPanel Margin="10,5,10,5">
                        <WrapPanel>
                            <TextBlock
                                Margin="10"
                                FontSize="24"
                                FontWeight="Bold"
                                Text="{Binding Name}"
                                TextWrapping="Wrap" />

                            <TextBlock
                                Margin="10"
                                FontSize="24"
                                FontWeight="Bold"
                                Text="{Binding Version}"
                                TextWrapping="Wrap" />
                        </WrapPanel>

                        <Expander Header="License">
                            <StackPanel Orientation="Vertical">
                                <TextBlock
                                    Margin="10"
                                    FontSize="12"
                                    Text="{Binding LicenseText}"
                                    TextWrapping="Wrap" />

                                <Grid x:Name="ThirdPartyNoticesViewer" Visibility="{Binding IsHasThirdPartyLicense, Converter={StaticResource BoolToVisibility}}">
                                    <Expander Header="Third Party Notices">
                                        <StackPanel Orientation="Vertical">
                                            <TextBlock
                                                Margin="10"
                                                FontSize="16"
                                                FontWeight="Bold"
                                                Text="Third Party Notices"
                                                TextWrapping="Wrap" />
                                            <TextBlock
                                                Margin="10"
                                                FontSize="12"
                                                Text="{Binding ThirdPartyLicenseText}"
                                                TextWrapping="Wrap" />
                                        </StackPanel>
                                    </Expander>
                                </Grid>
                            </StackPanel>
                        </Expander>
                    </StackPanel>
                </Border>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
    </ItemsControl>
</UserControl>
