<Window
    x:Class="WPF_Wave.Views.LicenseDisplayWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPF_Wave.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="clr-namespace:WPF_Wave.UserControls"
    Title="LicenseDisplayWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock
            Margin="10"
            HorizontalAlignment="Left"
            FontSize="24"
            FontWeight="Bold"
            Text="LICENSES" />

        <ScrollViewer Grid.Row="1">
            <StackPanel Orientation="Vertical">
                <TextBlock
                    Margin="10"
                    FontSize="16"
                    Text="Thank you to the wonderful creators of these license!"
                    TextWrapping="Wrap" />
                <uc:LicenseViewer />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
